<EnemiesDatas xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" xsi:noNamespaceSchemaLocation="EnemiesDatas.xsd">
   
   <EnemyDatas Id="Skeleton">
      <Health>200</Health>
      <WalkSpeed>1.3</WalkSpeed>
      <RunSpeed>3</RunSpeed>
      <HurtDur>0.25</HurtDur>
      <PlayerDetectionDist>3.5</PlayerDetectionDist>
      <PlayerLoseDist>4.5</PlayerLoseDist>
      <!--Behaviours in order priority.-->
      <Behaviours>
         <Behaviour Name="Base">
            <!--<Conditions>
               --><!--Behaviours only run at 10% health or MORE.--><!--
               <HealthMin Threshold="10"/>
            </Conditions>-->
            <!--Actions in order priority : the first being validated will be used.-->
            <Actions>
               <Attack Id="skeleton_atk_base">
                  <Conditions>
                     <PlayerAlive/>
                     <PlayerInRange Range="2.5"/>
                  </Conditions>
                  <Delay Min="0.5" Max="0.6"/>
                  <!--<AnimatorSuffix> ??-->
               </Attack>

               <!--<Attack Id="skeleton_atk_above">
                  <Conditions>
                     <PlayerAbove/>
                  </Conditions>
               </Attack>-->

               <BackAndForth>
                  <Range>2.5</Range>
                  <Pause Min="0.5" Max="1.5"/>
                  <RangeFluctuationOnPause>1.5</RangeFluctuationOnPause>
               </BackAndForth>
            </Actions>
         </Behaviour>
      </Behaviours>
      <!--<EventBehaviours>
         --><!--Just some event ideas.--><!--
         <OnHurtOver/>
         <OnAttackHit/>
         <OnPlayerDeath/>
      </EventBehaviours>-->
      <OnKilledTrauma>0.4</OnKilledTrauma>
   </EnemyDatas>

