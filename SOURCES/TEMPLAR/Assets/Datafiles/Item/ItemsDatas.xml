<?xml version="1.0" encoding="utf-8" ?>
<ItemsDatas xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" xsi:noNamespaceSchemaLocation="ItemsDatas.xsd">

   <ItemDatas Id="Sword">
      <Type>WEAPON</Type>
      <Description>My old sword. Not sure how it still in one part after all this time, but I should not complain about it.</Description>
      <AlwaysInInventory/>
   </ItemDatas>

   <ItemDatas Id="Coin">
      <Type>MISC</Type>
      <Description>Money ! Get away !</Description>
      <AlwaysShowQuantity/>
      <AlwaysInInventory/>
      <SkipPickupNotification/>
   </ItemDatas>

   <ItemDatas Id="Potion">
      <Type>CONSUMABLE</Type>
      <Description>I can use this to heal.</Description>
      <AlwaysShowQuantity/>
      <AlwaysInInventory/>
      <ActionsConditions>
         <Use>
            <FullHealth Negate="true"/>
         </Use>
      </ActionsConditions>
   </ItemDatas>

   <ItemDatas Id="Key_Godric_House">
      <Type>KEY</Type>
      <Description>The key of Godric's house. He told me that's where he forgot his ring.</Description>
   </ItemDatas>

   <ItemDatas Id="Key_Priest">
      <Type>KEY</Type>
      <Description>a key</Description>
   </ItemDatas>

   <ItemDatas Id="Key_Catacombs">
      <Type>KEY</Type>
      <Description>a key</Description>
   </ItemDatas>

   <ItemDatas Id="Ring_Godric">
      <Type>EQUIPABLE</Type>
      <Description>What a beautiful ring. I wonder where Godric got it, but it doesn't look he wants to talk about it.</Description>
   </ItemDatas>

   <ItemDatas Id="Book">
      <Type>BOOK</Type>
      <Description>Haa... if only I could read.</Description>
   </ItemDatas>

   <ItemDatas Id="Letter_Priest">
      <Type>BOOK</Type>
      <Description>It says: "The impious man has escaped, you must chase him to protect the secret."</Description>
   </ItemDatas>

   <ItemDatas Id="Letter_Prisonner">
      <Type>BOOK</Type>
      <Description>It’s written with blood : "FEBILIS"</Description>
   </ItemDatas>

   <ItemDatas Id="Scroll">
      <Type>BOOK</Type>
      <Description>This contains an important message I should deliver to... someone, I guess.</Description>
   </ItemDatas>
   
</ItemsDatas>