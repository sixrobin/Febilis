<?xml version="1.0" encoding="utf-8" ?>
<EnemiesDatas xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" xsi:noNamespaceSchemaLocation="EnemiesDatas.xsd">
   
   <EnemyDatas Id="Skeleton">
      <Health>150</Health>
      <WalkSpeed>1.3</WalkSpeed>
      <RunSpeed>3</RunSpeed>
      <HurtDur>0.25</HurtDur>
      <PlayerDetectionDist>3.5</PlayerDetectionDist>
      <PlayerLoseDist>5</PlayerLoseDist>
      <Physics>
         <Jump>
            <Height>2</Height>
            <ApexDur>0.3</ApexDur>
         </Jump>
         <HurtCheckEdge>true</HurtCheckEdge>
      </Physics>
      <Behaviours>
         <!--<Behaviour Name="Flee">
            <Conditions>
               <HealthMax Threshold="140"/>
               <PlayerDetected/>
            </Conditions>
            <Actions>
               <Flee>
                  <FacePlayer>true</FacePlayer>
               </Flee>
            </Actions>
         </Behaviour>-->
         <Behaviour Name="ChargeTest">
            <Conditions>
               <PlayerDetected/>
            </Conditions>
            <Actions>
               <Charge>
                  <!--<CantBeHurt/>-->
                  <!--<MaxDuration>3</MaxDuration>-->
               </Charge>
            </Actions>
         </Behaviour>
         <Behaviour Name="Base">
            <Actions>
               <Attack Id="skeleton_atk_above">
                  <Conditions>
                     <PlayerAbove/>
                     <PlayerAlive/>
                  </Conditions>
                  <AnimatorId>Above</AnimatorId>
               </Attack>
               <Attack Id="skeleton_atk_base">
                  <Conditions>
                     <PlayerAlive/>
                     <PlayerInRange Range="2.5"/>
                  </Conditions>
                  <Delay Min="0.45" Max="0.55"/>
                  <AnimatorId>Base</AnimatorId>
               </Attack>
               <Chase>
                  <Conditions>
                     <MaxHeightOffset Offset="0.2"/>
                     <PlayerAlive/>
                     <PlayerDetected/>
                  </Conditions>
               </Chase>
               <BackAndForth>
                  <Range>2.5</Range>
                  <Pause Min="0.5" Max="1.5"/>
                  <RangeFluctuationOnPause>1.5</RangeFluctuationOnPause>
               </BackAndForth>
            </Actions>
         </Behaviour>
      </Behaviours>
      <!--<EventBehaviours>
         --><!--Just some event ideas.--><!--
         <OnHurtOver/>
         <OnAttackHit/>
         <OnPlayerDeath/>
      </EventBehaviours>-->
      <OnKilledTrauma>0.4</OnKilledTrauma>
      <OnKilledLoot>
         <Coins>5</Coins>
      </OnKilledLoot>
   </EnemyDatas>

   <EnemyDatas Id="Rat">
      <Health>60</Health>
      <WalkSpeed>3.5</WalkSpeed>
      <RunSpeed>6</RunSpeed>
      <HurtDur>0.15</HurtDur>
      <PlayerDetectionDist>4</PlayerDetectionDist>
      <PlayerLoseDist>10</PlayerLoseDist>
      <Physics>
         <Jump>
            <Height>2</Height>
            <ApexDur>0.3</ApexDur>
         </Jump>
         <HurtCheckEdge>true</HurtCheckEdge>
      </Physics>
      <Behaviours>
         <Behaviour Name="Base">
            <Actions>
               <Attack Id="rat_atk_base">
                  <Conditions>
                     <PlayerAlive/>
                     <PlayerInRange Range="1.5"/>
                  </Conditions>
                  <Delay Min="0.3" Max="0.4"/>
                  <AnimatorId>Base</AnimatorId>
               </Attack>
               <Chase>
                  <Conditions>
                     <MaxHeightOffset Offset="0.5"/>
                     <PlayerDetected/>
                  </Conditions>
               </Chase>
               <BackAndForth>
                  <Range>3</Range>
                  <Pause Min="0.2" Max="0.5"/>
                  <!--Make the range random between 2 and 8, but always from the same origin point.-->
                  <RangeFluctuationOnPause>2</RangeFluctuationOnPause>
               </BackAndForth>
            </Actions>
         </Behaviour>
      </Behaviours>
      <OnKilledLoot>
         <Coins>2</Coins>
      </OnKilledLoot>
   </EnemyDatas>

